<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="600.0" stylesheets="@../../../css/stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.vehicle.OrderConfirmationController">
    <children>
         <Label layoutX="217.0" layoutY="24.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Order Confirmation" />
         <Label fx:id="userInfoLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="248.0" layoutY="63.0" text="User Information" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
         <TableView fx:id="productTable" layoutX="55.0" layoutY="187.0" prefHeight="200.0" prefWidth="500.0">
             <columns>
                 <TableColumn fx:id="productNameColumn" prefWidth="226.0" text="Product Name" />
                 <TableColumn fx:id="quantityColumn" prefWidth="70.0" text="Quantity" />
                 <TableColumn fx:id="pricePerItemColumn" prefWidth="99.0" text="Price/Item" />
                 <TableColumn fx:id="netPriceColumn" prefWidth="102.0" text="Net Price" />
             </columns>
         </TableView>
         <Label fx:id="totalPriceLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="258.0" layoutY="401.0" text="Total Price: $">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
          <Label layoutX="250.0" layoutY="434.0" text="Payment Method:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
          <RadioButton fx:id="cashRadioButton" layoutX="243.0" layoutY="478.0" prefHeight="21.0" prefWidth="129.0" text="Cash on Delivery">
         <toggleGroup>
            <ToggleGroup fx:id="paymentGroup" />
         </toggleGroup>
      </RadioButton>
          <RadioButton fx:id="cardRadioButton" layoutX="392.0" layoutY="478.0" prefHeight="21.0" prefWidth="129.0" text="Credit/Debit Card" toggleGroup="$paymentGroup" />
          <Button fx:id="purchaseButton" layoutX="478.0" layoutY="529.0" onAction="#handlePurchase" text="Purchase" />
          <Button fx:id="backButton" layoutX="55.0" layoutY="529.0" onAction="#handleBack" text="Back" />
      <RadioButton fx:id="mobileRadioButton" layoutX="90.0" layoutY="478.0" prefHeight="21.0" prefWidth="129.0" text="Mobile Banking" toggleGroup="$paymentGroup" />
    </children>
</AnchorPane>
