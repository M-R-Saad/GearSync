<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="390.0" style="-fx-border-color: #000000;" stylesheets="@../../../css/stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.vehicle.CarWashCardControllerAdmin">
    <children>
        <ImageView fx:id="planImage" fitHeight="150.0" fitWidth="100.0" layoutX="14.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" />
        <VBox layoutX="130.0" layoutY="14.0" prefWidth="250.0" spacing="5.0">
            <Label fx:id="planName" style="-fx-font-weight: bold;" text="Plan Name" />
            <Label fx:id="planDescription" text="Description" wrapText="true" />
            <Label fx:id="planServices" text="Services" wrapText="true" />
            <Label fx:id="planPrice" text="Price" />
         <HBox prefHeight="40.0" prefWidth="200.0" spacing="50.0">
            <children>
                 <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" prefHeight="35.0" prefWidth="125.0" text="Update Price" />
                 <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" prefHeight="35.0" prefWidth="80.0" text="Delete" />
            </children>
         </HBox>
        </VBox>
    </children>
</AnchorPane>
